			classes:'table table-condensed',
			clickToSelect:true,
			pageSize: 10,//页面数据条数
			pageNumber:1,//首页页码
			pageList: [1,2,3, 10, 20, 50, 200, 500],//设置可供选择的页面数据条数
			cache: false,//禁用 AJAX 数据缓存
			sortName:'roleId',//定义排序列
			sortOrder:'asc',//定义排序方式
			url:'sysRoleController/searchWithPage.do',//服务器数据的加载地址
			sidePagination:'server',//设置在哪里进行分页
			contentType:'application/json',//发送到服务器的数据编码类型
			dataType:'json',//服务器返回的数据类型
	//		queryParams:'',//请求服务器数据时，你可以通过重写参数的方式添加一些额外的参数
			//onDblClickCell:onDblClickCell,
			queryParams : queryParams, // 参数
			//onClickRow:onClickRow,
		    columns:[{
		    	checkbox:true,
		    	align:'center',
		    	valign:'middle',
		    	width:'',
		    },{
		    	field:'roleId',
		    	title:'角色编号',
		    	align:'center',
		    	valign:'middle',
		    	width:'',
		    },{
		    	field:'roleName',
		    	title:'角色名',
		    	align:'center',
		    	valign:'middle',
		    	width:'',
		    },{
		        field:'cmt',
		        title:'备注',
		        align:'center',
		        valign:'middle',
		        width:'',
		    }]
		});
	
});

function queryParams(params) { // 配置参数
	var temp = { // 这里的键的名字和控制器的变量名必须一直，这边改动，控制器也需要改成一样的

		limit : params.limit, // 页面大小
		offset : params.offset, // 页码
		sort : params.sort, // 排序列名
		order : params.order,
		roleName:$("#troleName").val(),
		/*createTime2:$('#createTime2').val(),
		usersID:$('#UsersID').val(),
		createTime:$('#createTime').val(),
		openid:$('#openid').val()*/
	// 排位命令（desc，asc）
	};
	
	return temp;
}

function add(){
	var obj ={};
	obj.roleId = "";
	obj.roleName=$("#roleName").val();
	obj.cmt = $("#cmt").val();
	$.ajax({
		url:'deliveryOrderController/edit.do',
		data:obj,
		success:function(e){
			alert(e);
			refresh();
		}
	});
}

function refresh(){
	$('#table').bootstrapTable('refresh', null);
}


function edit(){
	var obj = {};
	obj.roleId = $("#roleId2").val();
	obj.roleName = $("#roleName2").val();
	obj.cmt = $("#cmt2").val();
	
	$.ajax({
		url:'deliveryOrderController/edit.do',
		data:obj,
		success:function(e){
			if(e=="1"){
				refresh();
			}else{
				alert("错误");
			}
		}
		
	})
}


function show(){
	var data = $("#table").bootstrapTable('getSelections');
	if(data.length==1){
		$("#roleId2").val(data[0].roleId);
		$("#roleName2").val(data[0].roleName);
		$("#cmt2").val(data[0].cmt);
	}else{
		alert("请选择一条数据");
	}
}


function dele(){
	var data = $("#table").bootstrapTable('getSelections');
	if(data.length==1){
		$.ajax({
			url:'deliveryOrderController/dele.do',
			data:{dId:data[0].roleId},
			success:function(e){
				if(e=="1"){
					refresh();
				}else{
					alert("错误");
				}
			}
		});
	}else{
		alert("请选择一条数据");
	}
}

