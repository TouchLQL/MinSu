@Service
public class UserServiceImpl implements UserService {
  @Autowired
  private UserDao dao;
  
  
  @Override
  public List<User> getUserInfo(String condition){
	  if(condition!=null){
			condition=" userName like '%"+condition+"%' ";
		}
	  return dao.queryBycondition( condition);
  }




@Override
public int deleteByID(String IDS) {
	// TODO Auto-generated method stub
	int i=0;
	String []array=IDS.split(","); 
	for (String ID : array) {
		i=dao.deleteByID(ID);
	}
	return i;
}


@Override
public int insert(User user) {
	// TODO Auto-generated method stub
	user.setUserId(EntityIDFactory.createId());
/*	user.setUserType(0);*/
	return dao.insert(user);
}




@Override
public int updateById(User user, String userId) {
	// TODO Auto-generated method stub
	return dao.updateByID(user, userId);
}

}
