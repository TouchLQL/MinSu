//表格初始化
$(function(){	
	initData();//初始化数据
});

//获取全部数据
function initData(){
	$('#table').bootstrapTable({
		cache: false,                       //是否使用缓存，默认为true，所以一般情况下需要设置一下这个属性（*）
		striped: true,// 隔行变色效果
		pagination: true,// 在表格底部显示分页条
	    strictSearch: true,
	    pageNumber:1,                       //初始化加载第一页，默认第一页
	    pageSize: 10,                       //每页的记录行数（*）
	    pageList: [10, 25, 50, 100],        //可供选择的每页的行数（*）
		clickToSelect:true,//设置true 将在点击行时，自动选择radiobox 和 checkbox
		sortName:'Receipt.rId',//定义排序列
		sortOrder:'asc',//定义排序方式
		url:'receiptController/getReceiptInfo.do',//服务器数据的加载地址
		contentType:'application/json',//发送到服务器的数据编码类型
		dataType:'json',//服务器返回的数据类型
		queryParams:{ 	},
		queryParamsType: "limit", //参数格式,发送标准的RESTFul类型的参数请求
		selectItemName:'',//radio or checkbox 的字段名
        detailView: false,                   //是否显示父子表
        cardView: false,                    //是否显示详细视图
        uniqueId: "rId",                     //每一行的唯一标识，一般为主键列
	    columns:[{
	    	checkbox:true,
	    	align:'center',
	    	valign:'middle',
	    	width:'5%',
	    },{
	    	field:'rId',
	    	visible:false,
	    },{
	    	field:'dId',
	    	title:'货运单编号',
	    	align:'center',
	    	valign:'middle',
	    	width:'5%',
	    },{
	        field:'rName',
	        title:'姓名',
	        align:'center',
	        valign:'middle',
	        width:'15%',
	    },{
	        field:'rAdd',
	        title:'地址',
	        align:'center',
	        valign:'middle',
	        width:'15%',
	    },{
	        field:'rState',
	        title:'状态',
	        align:'center',
	        valign:'middle',
	        width:'15%',
	    	formatter:function(value,rowData,rowIndex){  
	    		if(rowData.rState=="1"){
	    			return "无差错";
	    		}else{
	    			return "有差错";
	    		}
	    	}
	    }]
	});
}
//下拉框选择
function changevalue(type,value){
	if(type==1){
		$('#textspan1').html(value);
	}
	else{
		$('#textspan2').html(value);
	}
}

//刷新
function refresh(){
	$('#table').bootstrapTable('refresh', null);
}


//修改存储值
function getParentbutton(dom,value,ID){
	var parentdom = dom.parentNode;
	for(var i = 0;;i++){
		if(parentdom.nodeName == "TD"){
			parentdom.innerHTML=value;
			visture = value ; 
			object.employeeName = ID;
			sbtjude = 1;
			viscount = 1;
			judgHtml=0;
			judg = 1;
			break;
		}else{
			parentdom = parentdom.parentNode;
		}
	}
}

//修改存储值
function getParentbutton2(dom,value,ID){
	var parentdom = dom.parentNode;
	for(var i = 0;;i++){
		if(parentdom.nodeName == "TD"){
			parentdom.innerHTML=value;
			visture2 = value,
			object.employeeName2= ID;
			sbtjude = 1;
