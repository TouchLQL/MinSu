	<script src="module/JS/DeliveryInfo/DeliveryInfo.js"></script>
    <script>
    	$(function(){
    			$("#myModal").modal("hide");
    	}); 
    	$(".diTime").focus();
			function timeget(){
			$(".diTime").datetimepicker({
				minView:'year',
				format: 'yyyy-mm-dd',
				autoclose:1,
				todayHighlight:1,
				startView:2,
				forceParse:0,
				showMeridian:1,
				language:'zh-CN'      /*此属性是显示顺序，还有显示顺序是mm-dd-yyyy*/
			});
		}
  	</script>
  </body>
</html>
