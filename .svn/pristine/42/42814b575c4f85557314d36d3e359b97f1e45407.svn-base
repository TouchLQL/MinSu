		  }else {
			  content="派件";
		  }
		  $('#editmyModal').modal("show");
		  $("input[id='dId']").val(getdata[0].dId);
		  $("input[id='diTime']").val(getdata[0].diTime);
		  $("input[id='diAdd']").val(getdata[0].diAdd);
		  $("input[id='diType']").val(getdata[0].diType);
		  $("span[id='dState3']").html(content);
