 //主函数begin
$(function () {
			init();		     
		    });
 //主函数end

        //数据展示begin
        function init() {
            $('#table').bootstrapTable({
                url: 'userController/getUserInfo.do',     //请求后台的URL（*）
                method: 'post',                           //请求方式（*）             
//              toolbar: '#toolbar',                //工具按钮用哪个容器
                striped: true,                      //是否显示行间隔色
//                cache: false,                       //是否使用缓存，默认为true，所以一般情况下需要设置一下这个属性（*）
                pagination: true,                   //是否显示分页（*）
                sortable: false,                     //是否启用排序
                sortOrder: "asc",                   //排序方式
                dataType:'json',                    //服务器返回的数据类型
        	//	sidePagination:'client',
            	queryParams:{  },                     //传递参数（*）
           //   sidePagination: "server",           //分页方式：client客户端分页，server服务端分页（*）
                pageNumber:1,                       //初始化加载第一页，默认第一页
                pageSize: 10,                       //每页的记录行数（*）
                pageList: [10, 25, 50, 100],        //可供选择的每页的行数（*）
              //  strictSearch: true,
           //     clickToSelect: true,                //是否启用点击选中行
                height: 500,                        //行高，如果没有设置height属性，表格自动根据记录条数觉得表格高度
                uniqueId: "userId",                     //每一行的唯一标识，一般为主键列
                cardView: false,                    //是否显示详细视图
           //     detailView: false,                   //是否显示父子表
                clickToSelect: true,                //是否启用点击选中行
          //      contentType:'application/json',     //发送到服务器的数据编码类型       		
                columns: [{
                    checkbox: true
                },{
                    field: 'userId',
                    title: '用户编号'
                }, {
                    field: 'userName',
                    title: '用户名'
                }, {
                    field: 'telephone',
                    title: '电话'
                }, {
                    field: 'password',
                    title: '密码'
                }, {
                    field: 'userType',
                    title: '用户类型'
                },]
            });
        };
       //数据展示end  
        
        
        //刷新beign
      //刷新
        function refresh(){
        	$('#table').bootstrapTable('refresh',
        		{query:{"condition":""}}
        	);
        }
        //刷新end
        
        
        //删除begin
        function deleteByID(){
        	var getdata = $('#table').bootstrapTable('getSelections');
        	var dataobj={};
            dataobj.id=getdata[0].userId;        
        	if( getdata[0].userId!=null){          		 
        		$.ajax({
        			type: 'post',
    				url:'userController/deleteByID.do',
    				data:{"ID":dataobj.id},
    				success:function(data){    
    					alert(data);
    					alert("成功");
    				},
    			});       	  
        	}else{alert("请选中一行")}  
        	 refresh();  
        }
       //删除end 
        
        
      //  新增数据begin
        function addrow(){
        	  $('#myModal').modal("show");
        	   $('#submit').one("click", function () {          		   
        		   var obj={};//定义参数对象
        		   obj.userName=$("input[name='userName']").val();
        		   obj.password=$("input[name='password']").val();
        		   obj.telephone=$("input[name='telephone']").val();   		   
        		   $.ajax({  
        			   type:"post",
        			   url:"userController/insert.do",
        			   data:{
        				   "userName": obj.userName,
        				   "password": obj.password,
        				   "telephone": obj.telephone,        				 
        				   },
        			   dataType: "json",
        			   success:function(data){
        				   var datas=data+"";
        				   if(datas=="true"){
        					   refresh();
        					   alert("新增成功!");
        					   $('input').val(" ");  
        					   $('#myModal').modal("hide");
        				   }
        				   else alert("新增失败！");
        			   }
        		   });		  
        	   });
        }
    //  新增数据end 
     
        //修改数据
        function updateById(){ 
    	  var getdata = $('#table').bootstrapTable('getSelections');	   
    	  if(getdata.length!=1){
    		  alert("请选择一条进行修改！");
    	  }else{  		 
    		  $('#myModal').modal("show");
    		  $("input[name='userId']").val(getdata[0].userId);
    		  $("input[name='userName']").val(getdata[0].userName);   		
    		  $("input[name='telephone']").val(getdata[0].telephone);
    		  $("input[name='password']").val(getdata[0].password);
    		  $("input[name='userType']").val(getdata[0].userType);     		  
			   $('#submit').one("click", function (){    //one 是只创建一次
				   var obj={};//定义参数对象
				   obj.userId=$("input[name='userId']").val();
				   obj.userName=$("input[name='userName']").val();					
				   obj.telephone=$("input[name='telephone']").val();
				   obj.password=$("input[name='password']").val();
				   obj.userType=$("input[name='userType']").val();				
				   $.ajax({
					   type:"post",
					   url:"userController/updateById.do",
					   data:{
						   "userId":getdata[0].userId,
						   "userName": obj.userName,
						   "telephone": obj.telephone,
						   "password": obj.password,
						   "userType":getdata[0].userType,
						   },
					   success:function(data){	
						   var datas=data+"";
						   if(datas=="true"){
							   $("input").val("");
							   alert("修改成功!");	
							   $('#myModal').modal("hide");
							   refresh();
						   }else alert("修改失败！");
					   }
				   });			 
			   })		   
    	  }
    }
 
        //搜索
        function research(){       	
        	$('#table').bootstrapTable('refresh',
        			{query:{"condition":$("input[name='condition']").val()}}
        	);
        }
        
        
        
        
        
        
        
        
        
       
        
        