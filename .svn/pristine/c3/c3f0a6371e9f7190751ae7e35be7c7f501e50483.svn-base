    <script>
    	$(function(){
    			$("#myModal").modal("hide");
    			getUserName();
    	}); 
    	function getUserName(){
    	  $.ajax({
		   type:"post",
		   url:"ownInfoController/getOwnInfo.do",
		   data:{ "ID":<%=ID%>},
		   async:false, 
		   success:function(data){
				   var datas=eval(data);
				   if(datas!=""){
					   $("#userName").val(datas[0].userName)
					   if(datas[0].userType=="0"){
					   		$("#content_top").attr("style","display:none");
					   }
				   }
			   }
		   });
    	}
    	$(".diTime").focus();
			function timeget(){
			$(".diTime").datetimepicker({
				minView:'year',
				format: 'yyyy-mm-dd',
				autoclose:1,
				todayHighlight:1,
				startView:2,
				forceParse:0,
				showMeridian:1,
				language:'zh-CN'      /*此属性是显示顺序，还有显示顺序是mm-dd-yyyy*/
			});
		}
  	</script>
